<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.InfosCities" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue_500</item>
        <item name="colorPrimaryVariant">@color/blue_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/blue_500</item>
        <item name="colorSecondaryVariant">@color/blue_700</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->

    </style>

    <style name="et">
        <item name="android:textColorHint">@color/grey</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/rounded_corners</item>
        <item name="android:padding">12dp</item>
        <item name="minHeight">48dp</item>
        <item name="android:fontFamily">@font/normal</item>
    </style>


    <style name="btn">
        <item name="android:fontFamily">@font/normal</item>
        <item name="android:paddingStart">@dimen/dimen_16</item>
        <item name="android:paddingEnd">@dimen/dimen_16</item>
        <item name="android:paddingTop">@dimen/dimen_16</item>
        <item name="android:paddingBottom">@dimen/dimen_16</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="title">


        <item name="android:fontFamily">@font/bold</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">42sp</item>

    </style>



</resources>